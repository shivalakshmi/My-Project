<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <TextView
        android:id="@+id/upcoming"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:text="Friends with Upcoming Birthdays"
        android:textColor="@color/orange"
        android:textSize="@dimen/eighteen"
        android:textStyle="bold"
        android:visibility="gone"
         />

    <TextView
        android:id="@+id/location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upcoming"
        android:layout_marginBottom="@dimen/five"
        android:layout_marginTop="@dimen/five"
        android:text="Today"
        android:textColor="@color/orange"
        android:textSize="@dimen/eighteen" 
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/sixty"
        android:layout_height="@dimen/sixty"
        android:layout_below="@id/location"
        android:layout_marginLeft="@dimen/five"
        android:layout_marginRight="@dimen/eight"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/extralayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/location"
        android:layout_marginTop="@dimen/ten"
        android:layout_toRightOf="@id/imageView1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen" />

        <TextView
            android:id="@+id/dob"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/location"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/cake"
            android:layout_width="@dimen/fourty"
            android:layout_height="@dimen/fourty"
            android:src="@drawable/cake"
            android:visibility="gone" />

        <Button
            android:id="@+id/wish"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/twenty_five"
            android:layout_marginRight="@dimen/three"
            android:layout_marginTop="@dimen/twelve"
            android:background="@drawable/rounded_button_green"
            android:text="Wish"
            android:textColor="@color/white"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>